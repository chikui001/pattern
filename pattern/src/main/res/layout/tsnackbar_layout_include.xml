<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:id="@+id/snackbar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Test"
            android:ellipsize="end"/>
    <RelativeLayout
            android:id="@+id/snackbar_action_ry"
            android:layout_marginLeft="@dimen/snack_left_right_space_anti"
            android:layout_width="@dimen/snack_left_right_space"
            android:layout_height="@dimen/snack_left_right_space"
            android:layout_toRightOf="@+id/snackbar_text"
            android:visibility="gone"
            android:layout_centerVertical="true">
        <ImageView
                android:id="@+id/snackbar_action"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorAccent"/>
    </RelativeLayout>
</merge>
