<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="237dp"
             android:layout_height="295dp">
    <ImageView
            android:id="@+id/back_iv"
            android:layout_width="228dp"
            android:layout_height="287dp"
            android:src="@drawable/shebei_card"
            android:layout_gravity="center"/>
    <LinearLayout
            android:layout_width="227dp"
            android:layout_height="35.7dp"
            android:layout_gravity="center_horizontal|bottom"
            android:divider="@drawable/divider_horizontal_0dot7_ececec"
            android:showDividers="beginning"
            android:orientation="vertical"
            android:layout_marginBottom="4dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35.7dp"
                android:gravity="center_vertical"
                android:divider="@drawable/divider_vertical_0dot7_ececec"
                android:showDividers="middle"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/forward_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="上一步"
                    android:gravity="center"
                    android:textColor="#1D1D1D"
                    android:textSize="12.7sp">
            </TextView>
            <TextView
                    android:id="@+id/backward_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="下一步"
                    android:gravity="center"
                    android:textColor="#1D1D1D"
                    android:textSize="12.7sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/close_card_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close_card_btn"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="220dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:scrollbars="none">
        <TextView
                android:id="@+id/content_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#8A000000"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>
    </ScrollView>

</FrameLayout>